@model BookReadingEventApplication.Models.EventsWrappper

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    
}

<h2>Future Events</h2>



<table class="table">
    <tr>
        <th>
            @*@Html.ActionLink("Book Title", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })*@
            Book Title
        </th>
        <th>
            Location
        </th>
        <th>
            @*@Html.ActionLink("Enrollment Date", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })*@
            EventDate
        </th>
        <th>
            Event Duration
        </th>
        <th>
            Start Time
        </th>
        <th>
            Event Type
        </th>
    </tr>
    
    @foreach (var item in @Model.futureEvents)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.bookTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eventDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eventDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.eventType)
        </td>
        <td>
            
            @Html.ActionLink("Details", "Details", new { id = item.eventID }) 
           
        </td>
    </tr>
    }

</table>
<br />
